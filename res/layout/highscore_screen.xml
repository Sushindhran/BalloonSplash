        android:layout_toRightOf="@+id/name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/heading"
        android:text="Score" 
        android:clickable="true"
        android:onClick="onClick"/>
    
