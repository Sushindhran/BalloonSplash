<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.infy.balloon"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/start_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.infy.ballon.activity.HomeScreenActivity" android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.infy.ballon.activity.BalloonActivity" android:label="@string/app_name"></activity>
        <activity android:name="com.infy.ballon.activity.RulesActivity" android:label="@string/app_name"></activity>
        <activity android:name="com.infy.ballon.activity.HighScoresActivity" android:label="@string/app_name"></activity>
    </application>

</manifest>